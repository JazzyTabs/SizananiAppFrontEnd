<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layer_card_background">

            <ImageView
                android:id="@+id/D_image"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/beautiful" />

            <LinearLayout
                android:id="@+id/firstRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/D_image"
                android:orientation="horizontal">
                //-----------------first column----------------

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/D_titleTextView"
                        android:paddingTop="@dimen/big_padding"
                        android:paddingLeft="@dimen/big_padding"
                        android:paddingRight="@dimen/big_padding"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/bigger_title_size"
                        tools:text="This is the title"/>

                </RelativeLayout>
                //------------------second column---------------

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2">
                    <RelativeLayout
                        android:layout_marginTop="18dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:background="@drawable/layer_card_background"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/D_date"
                            android:gravity="end"
                            android:paddingRight="3dp"
                            android:text="2015/04/08" />
                    </RelativeLayout>
                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/firstRow"
                android:orientation="horizontal">
                //-----------------first column----------------

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/D_subtitleTextView"
                            android:textColor="@color/description_color"
                            android:paddingLeft="@dimen/big_padding"
                            android:paddingRight="@dimen/big_padding"
                            android:textSize="@dimen/subtitle_size"
                            android:textStyle="bold"
                            tools:text="I am the subtitle"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/D_descriptionTextView"
                            android:textColor="@color/description_color"
                            android:paddingBottom="@dimen/big_padding"
                            android:paddingRight="@dimen/big_padding"
                            android:paddingLeft="@dimen/big_padding"
                            android:paddingTop="@dimen/small_padding"
                            android:textSize="@dimen/description_size"
                            tools:text="And this is the description"/>
                    </LinearLayout>

                </RelativeLayout>
                //------------------second column---------------
            </LinearLayout>


        </RelativeLayout>


        `
    </RelativeLayout>
</ScrollView>
